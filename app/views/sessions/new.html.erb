<%= provide(:title,'Login') %>
<h1>Log in</h1>
<!-- <p>Find me in app/views/sessions/new.html.erb</p> -->
<div class="row">
	<div class="col-md-6 col-offset-3">
	
	<%=form_for(:session ,url:login_path) do |lf| %>

	<%= lf.label :email %>
	<%= lf.email_field :email,class: 'form-control' %>

	<%= lf.label :password %>
	<%= link_to "(forgot password)", new_password_reset_path %>
	<%= lf.password_field :password , class: 'form-control'%>

	<%= lf.label :remember_me, class: "checkbox inline" do %>
    	<%= lf.check_box :remember_me %>
        <span>Remember me on this computer</span>
    <% end %>

	<%= lf.submit "Login ",class: "btn btn-primary" %>
	<% end -%>
	 <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
</div>
